# Types
type Match {
  id: ID!
  homeTeam: Team! @goField(forceResolver: true)
  awayTeam: Team! @goField(forceResolver: true)
  matchday: Int!
  matchDate: Time!
  homeGoals: Int
  awayGoals: Int
  status: MatchStatus!
}

enum MatchStatus {
  SCHEDULED
  IN_PROGRESS
  FINISHED
}

# Inputs
input createMatchInput {
  homeTeam: ID!
  awayTeam: ID!
  matchday: Int!
  matchDate: Time!
}

input updateMatchInput {
  homeGoals: Int!
  awayGoals: Int!
  matchday: Int!
  matchDate: Time!
}

# Responses
