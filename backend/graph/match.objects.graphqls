# Types
type Match {
  id: ID!
  homeTeam: Team!
  awayTeam: Team!
  matchday: Int!
  matchDate: Time!
  homeGoals: Int
  awayGoals: Int
  status: MatchStatus!
}

enum MatchStatus {
  SCHEDULED
  TIMED
  IN_PLAY
  FINISHED
}

# Inputs
input createMatchInput {
  homeTeam: ID!
  awayTeam: ID!
  matchday: Int!
  matchDate: Time!
}

input updateMatchInput {
  homeGoals: Int!
  awayGoals: Int!
  matchday: Int!
  matchDate: Time!
}

# Responses
