# Types
type User {
  id: ID!
  username: String!
  firstName: String!
  lastName: String!
  email: String!
  phoneNumber: String!
  dateOfBirth: String!
  favouriteTeam: ID
  createdAt: Time
  updatedAt: Time
}

# Inputs
