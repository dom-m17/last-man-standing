type Query {
  hello: String!
}

type Mutation {
  createUser(input: CreateUserInput!): CreateUserResponse!
}

input CreateUserInput {
  username: String!
  hashedPassword: String!
  firstName: String!
  lastName: String!
  email: String!
  phoneNumber: String!
  favouriteTeam: ID
}

type CreateUserResponse {
  id: ID!
  username: String!
  firstName: String!
  lastName: String!
  email: String!
  phoneNumber: String!
  favouriteTeam: ID
}
